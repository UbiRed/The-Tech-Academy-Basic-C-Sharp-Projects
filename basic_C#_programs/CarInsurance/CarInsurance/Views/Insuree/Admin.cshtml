@model List<AdminViewModel>

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>

<h3>Insured Persons</h3>

<!-- Table taht displays user data -->
<table class="table">

    <thead>

        <tr>

            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Quote</th>

        </tr>

    </thead>

    <tbody>

        <!-- Loop through each item in the Model and display data rows -->
        @foreach (var insuree in Model)
        {
            <tr>
                <td>@insuree.FirstName</td>
                <td>@insuree.LastName</td>
                <td>@insuree.EmailAddress</td>
                <td>@insuree.Quote</td>
            </tr>
        }

    </tbody>

</table>

<!-- Link that navigates Index -->
@Html.ActionLink("Back to List", "Index")
